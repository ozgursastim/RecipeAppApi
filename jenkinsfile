pipeline{
    agent none
    stages {
        stage('build'){
            agent{
                docker{
                    image '3.8.3-alpine'
                    label 'docker'
                }
            }
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('test'){
            steps {
                sh 'docker-compose run app sh -c "python manage.py test && flake8"'
            }
        }
    }
}